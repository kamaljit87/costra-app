# Costra Docker environment - copy to .env and customize
# Required: use your managed PostgreSQL (RDS, Cloud SQL, etc.)

DATABASE_URL=postgresql://user:password@your-managed-db-host:5432/costra

JWT_SECRET=generate-a-strong-32-char-secret-for-production
ENCRYPTION_KEY=generate-a-strong-32-char-key-for-credentials

# When using nginx reverse proxy (default): use relative /api
# When not using nginx: use full URL e.g. http://localhost:3002/api
VITE_API_URL=/api
FRONTEND_URL=https://costra.app

# Optional
REDIS_URL=redis://costra-redis:6379
SENTRY_DSN=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
